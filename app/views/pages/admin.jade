extends ../layout

block content
    .container
        form.form-horizontal(method="post", action="/admin/movie",width="100%")
            .form-group.row
                label.col-sm-2.control-label 豆瓣同步
                input#douban(type='text') 
            if movie._id
                input(type="hidden", name="movies[_id]", value=movie._id)
            .form-group.row
                label.col-sm-2.control-label(for="inputTitle") 电影名字
                .col-sm-10
                    input#inputTitle.form-control(type="text", name="movies[title]", value=movie.title)
            .form-group.row
                label.col-sm-2.control-label(for="inputCategory") 电影分类
                .col-sm-10
                    input#inputCategory.form-control(type="text", name="movies[categoryName]", value=movie.categoryName)
             .form-group.row
                label.col-sm-2.control-label 分类选择
                each cat in categories
                    label.radio-inline
                        if movie._id
                            input(type='radio',name='movies[category]' value=cat._id,checked=cat._id.toString()===movie.category.toString()) 
                        else
                            input(type='radio',name='movies[category]' value=cat._id) 
                        | #{cat.name}
            .form-group.row
                label.col-sm-2.control-label(for="inputDoctor") 电影导演
                .col-sm-10
                    input#inputDoctor.form-control(type="text", name="movies[doctor]", value=movie.doctor)
            .form-group.row
                label.col-sm-2.control-label(for="inputCountry") 国家
                .col-sm-10
                    input#inputCountry.form-control(type="text", name="movies[country]", value=movie.country)
            .form-group.row
                label.col-sm-2.control-label(for="inputLanguage") 语种
                .col-sm-10
                    input#inputLanguage.form-control(type="text", name="movies[language]", value=movie.language)
            .form-group.row
                label.col-sm-2.control-label(for="inputPoster") 海报地址
                .col-sm-10
                    input#inputPoster.form-control(type="text", name="movies[poster]", value=movie.poster)
            .form-group.row
                label.col-sm-2.control-label(for="inputFlash") 片源地址
                .col-sm-10
                    input#inputFlash.form-control(type="text", name="movies[flash]", value=movie.flash)
            .form-group.row
                label.col-sm-2.control-label(for="inputYear") 上映年代
                .col-sm-10
                    input#inputYear.form-control(type="text", name="movies[year]", value=movie.year)
            .form-group.row
                label.col-sm-2.control-label(for="inputSummary") 电影简介
                .col-sm-10
                    input#inputSummary.form-control(type="text", name="movies[summary]", value=movie.summary)
            .form-group.row
                .col-sm-12.text-center
                    button.btn.btn-default(type="submit") 录入
    script(src="/js/delete.js")